   <head>
      <meta charset="utf-8">
   </head>
   <body><center>
<h1>Esrutura Condicional(if/else)</h1> 
    <script>
       var altura= 1.58;
       var peso= 50;
       var imc= peso/(altura*altura);
       if (imc<18.5){
           window.document.write(imc +" classificação magreza");
        } else if((imc>18.5) && (imc<24.9)){
           window.document.write(imc +" classificação saudável");
        } else if((imc>25.0) && (imc<29.9)){
           window.document.write(imc +" classificação sobrepeso");
        } else if((imc>30.0) && (imc<34.9)){
          window.document.write(imc +" classificação obesidade grau 1");
        } else if((imc>35.0) && (imc<39.9)){
           window.document.write(imc +" classificação obesidade grau 2(severa)");
        } else if(imc>=40){
           window.document.write(imc +" classificação obesidade grau 3(morbida)");
        }


    </script>
   </body>
